<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>SignupPage</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>

        <div class="container mt-4">
            <form method="post" action="/user/signup">

                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Jhon Doe" aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="jhondoe@gmail.com"  aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="*******">
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <%- include("./partials/scripts.ejs") %>
</body>

</html>